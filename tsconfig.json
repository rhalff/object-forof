{
  "compilerOptions": {
    "target": "es5",
    "downlevelIteration": true,
    "rootDir": "src",
    "outDir": "lib",
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "typeRoots": [
      "node_modules/@types",
      "typings/"
    ],
    "lib": [
      "es2017",
      "dom",
      "es7"
    ]
  }
}
